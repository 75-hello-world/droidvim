<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <jackpal.androidterm.TermViewFlipper
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/view_flipper"
                android:focusableInTouchMode="true"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp" />

            <HorizontalScrollView
                android:id="@+id/view_function_bar"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
                <LinearLayout
                    android:id="@+id/view_function_bar_keys"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >
                    <Button
                        android:id="@+id/button_next_functionbar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="44sp"
                        android:minWidth="0sp"
                        android:text="↓"/>
                    <Button
                        android:id="@+id/button_esc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="44sp"
                        android:minWidth="56sp"
                        android:text="Esc"/>
                    <Button
                        android:id="@+id/button_ctrl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="44sp"
                        android:minWidth="56sp"
                        android:text="Ctrl"/>
                    <Button
                        android:id="@+id/button_alt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="44sp"
                        android:minWidth="56sp"
                        android:text="Alt"/>
                    <Button
                        android:id="@+id/button_tab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="44sp"
                        android:minWidth="56sp"
                        android:text="Tab"/>
                    <Button
                        android:id="@+id/button_up"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="44sp"
                        android:minWidth="56sp"
                        android:text="▲"/>
                    <Button
                        android:id="@+id/button_down"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="44sp"
                        android:minWidth="56sp"
                        android:text="▼"/>
                    <Button
                        android:id="@+id/button_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="44sp"
                        android:minWidth="56sp"
                        android:text="◀"/>
                    <Button
                        android:id="@+id/button_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="44sp"
                        android:minWidth="56sp"
                        android:text="▶"/>
                    <Button
                        android:id="@+id/button_backspace"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="44sp"
                        android:minWidth="56sp"
                        android:text="BS"/>
                    <Button
                        android:id="@+id/button_enter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="44sp"
                        android:minWidth="56sp"
                        android:text="↲"/>
                    <Button
                        android:id="@+id/button_i"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="44sp"
                        android:minWidth="56sp"
                        android:text="i"/>
                    <Button
                        android:id="@+id/button_colon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="44sp"
                        android:minWidth="56sp"
                        android:text=":"/>
                    <Button
                        android:id="@+id/button_softkeyboard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="44sp"
                        android:minWidth="56sp"
                        android:text="◇"/>
                    <Button
                        android:id="@+id/button_menu_user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="44sp"
                        android:minWidth="56sp"
                        android:text="□"/>
                    <Button
                        android:id="@+id/button_slash"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="44sp"
                        android:minWidth="56sp"
                        android:text="/"/>
                    <Button
                        android:id="@+id/button_minus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="44sp"
                        android:minWidth="56sp"
                        android:text="-"/>
                    <Button
                        android:id="@+id/button_equal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="44sp"
                        android:minWidth="56sp"
                        android:text="="/>
                    <Button
                        android:id="@+id/button_asterisk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="44sp"
                        android:minWidth="56sp"
                        android:text="*"/>
                    <Button
                        android:id="@+id/button_pipe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="44sp"
                        android:minWidth="56sp"
                        android:text="|"/>
                    <Button
                        android:id="@+id/button_vim_paste"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="44sp"
                        android:minWidth="56sp"
                        android:text="&quot;*p"/>
                    <Button
                        android:id="@+id/button_vim_yank"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="44sp"
                        android:minWidth="56sp"
                        android:text="&quot;*yy"/>
                    <Button
                        android:id="@+id/button_menu_plus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="44sp"
                        android:minWidth="56sp"
                        android:text="[＋]"/>
                    <Button
                        android:id="@+id/button_menu_minus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="44sp"
                        android:minWidth="56sp"
                        android:text="[－]"/>
                    <Button
                        android:id="@+id/button_menu_x"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="44sp"
                        android:minWidth="56sp"
                        android:text="[×]"/>
                    <Button
                        android:id="@+id/button_menu_quit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="44sp"
                        android:minWidth="56sp"
                        android:text="[Q]"/>
                    <Button
                        android:id="@+id/button_menu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="44sp"
                        android:minWidth="56sp"
                        android:text="≡"/>
                    <Button
                        android:id="@+id/button_menu_hide"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="44sp"
                        android:minWidth="56sp"
                        android:text="▽"/>
                    <Button
                        android:id="@+id/button_next_functionbar2"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="44sp"
                        android:minWidth="0sp"
                        android:text="↓"/>
                </LinearLayout>
            </HorizontalScrollView>

            <HorizontalScrollView
                android:id="@+id/view_function_bar2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >
                    <Button
                        android:id="@+id/button_prev_functionbar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="44sp"
                        android:minWidth="0sp"
                        android:text="↑"/>
                    <Button
                        android:id="@+id/button_m1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="44sp"
                        android:minWidth="56sp"
                        android:text="F1"/>
                    <Button
                        android:id="@+id/button_m2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="44sp"
                        android:minWidth="56sp"
                        android:text="F2"/>
                    <Button
                        android:id="@+id/button_m3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="44sp"
                        android:minWidth="56sp"
                        android:text="F3"/>
                    <Button
                        android:id="@+id/button_m4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="44sp"
                        android:minWidth="56sp"
                        android:text="F4"/>
                    <Button
                        android:id="@+id/button_m5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="44sp"
                        android:minWidth="56sp"
                        android:text="F5"/>
                    <Button
                        android:id="@+id/button_m6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="44sp"
                        android:minWidth="56sp"
                        android:text="F6"/>
                    <Button
                        android:id="@+id/button_m7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="44sp"
                        android:minWidth="56sp"
                        android:text="F7"/>
                    <Button
                        android:id="@+id/button_m8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="44sp"
                        android:minWidth="56sp"
                        android:text="F8"/>
                    <Button
                        android:id="@+id/button_m9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="44sp"
                        android:minWidth="56sp"
                        android:text="F9"/>
                    <Button
                        android:id="@+id/button_m10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="44sp"
                        android:minWidth="56sp"
                        android:text="F10"/>
                    <Button
                        android:id="@+id/button_m11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="44sp"
                        android:minWidth="56sp"
                        android:text="F11"/>
                    <Button
                        android:id="@+id/button_m12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="44sp"
                        android:minWidth="56sp"
                        android:text="F12"/>
                    <Button
                        android:id="@+id/button_prev_functionbar2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="44sp"
                        android:minWidth="0sp"
                        android:text="↑"/>
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="@android:color/white"
            android:choiceMode="singleChoice"
            android:divider="@android:color/transparent"
            android:dividerHeight="0dp"
            android:descendantFocusability="blocksDescendants"
            android:orientation="vertical">

            <ListView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="top"
                android:layout_weight="1"
                android:choiceMode="singleChoice"
                android:longClickable="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/drawer_extra_button"
                    style="?android:attr/buttonBarButtonStyle"
                    android:minHeight="25sp"
                    android:visibility="visible"
                    android:textColor="@android:color/white"
                    android:background="@drawable/extra_button"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/extra" />

                <Button
                    android:id="@+id/drawer_debug_button"
                    style="?android:attr/buttonBarButtonStyle"
                    android:minHeight="25sp"
                    android:visibility="gone"
                    android:textColor="@android:color/white"
                    android:background="@drawable/extra_button"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/debug" />

                <View
                    android:layout_weight="10000"
                    android:visibility="visible"
                    android:layout_width="0dp"
                    android:layout_height="10000dp" />

                <Button
                    android:id="@+id/drawer_dropbox_button"
                    android:visibility="gone"
                    style="?android:attr/buttonBarButtonStyle"
                    android:minHeight="35sp"
                    android:textColor="@android:color/white"
                    android:background="@drawable/sidebar_button"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/dropbox" />

                <Button
                    android:id="@+id/drawer_googledrive_button"
                    android:visibility="gone"
                    style="?android:attr/buttonBarButtonStyle"
                    android:minHeight="35sp"
                    android:textColor="@android:color/white"
                    android:background="@drawable/sidebar_button"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/googledrive" />

                <Button
                    android:id="@+id/drawer_onedrive_button"
                    android:visibility="gone"
                    style="?android:attr/buttonBarButtonStyle"
                    android:minHeight="35sp"
                    android:textColor="@android:color/white"
                    android:background="@drawable/sidebar_button"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/onedrive" />

                <View
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="8dp" />

                <Button
                    android:id="@+id/drawer_storage_button"
                    android:visibility="gone"
                    style="?android:attr/buttonBarButtonStyle"
                    android:minHeight="35sp"
                    android:textColor="@android:color/white"
                    android:background="@drawable/sidebar_button"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/external_storage" />

                <Button
                    android:id="@+id/drawer_createfile_button"
                    android:visibility="gone"
                    style="?android:attr/buttonBarButtonStyle"
                    android:minHeight="35sp"
                    android:textColor="@android:color/white"
                    android:background="@drawable/sidebar_button"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/create_or_delete" />

                <Button
                    android:id="@+id/drawer_clear_cache_button"
                    android:visibility="gone"
                    style="?android:attr/buttonBarButtonStyle"
                    android:minHeight="35sp"
                    android:textColor="@android:color/white"
                    android:background="@drawable/sidebar_button"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/clear_cache" />

                <View
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="8dp" />

                <Button
                    android:id="@+id/drawer_keyboard_button"
                    style="?android:attr/buttonBarButtonStyle"
                    android:visibility="gone"
                    android:minHeight="35sp"
                    android:textColor="@android:color/white"
                    android:background="@drawable/sidebar_button"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/softkeyboard" />

                <Button
                    android:id="@+id/drawer_menu_button"
                    style="?android:attr/buttonBarButtonStyle"
                    android:minHeight="35sp"
                    android:textColor="@android:color/white"
                    android:background="@drawable/sidebar_button"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/title_functionbar_menu" />

                <Button
                    android:id="@+id/drawer_quit_button"
                    style="?android:attr/buttonBarButtonStyle"
                    android:minHeight="35sp"
                    android:textColor="@android:color/white"
                    android:background="@drawable/sidebar_button"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Quit" />

                <View
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="20dp" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v4.widget.DrawerLayout>
</RelativeLayout>
